<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.raquel.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pokédex"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.raquel.pokedex.actividades.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.raquel.pokedex.actividades.MainActivity"/>
        <activity android:name=".actividades.PokemonTypes" />

        <activity
            android:name="org.raquel.pokedex.actividades.FavoritesActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Favoritos">
        </activity>

        <activity
            android:name="org.raquel.pokedex.actividades.PokemonDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Pokémon">
        </activity>

        <activity
            android:name="org.raquel.pokedex.actividades.PokemonTypeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="Tipo">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>